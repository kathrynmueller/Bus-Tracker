<!DOCTYPE html>
<html>
  <head>
    <title>TheBigPeach</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to root_path do %>
        <%= image_tag "peach.png", class: "d-inline-block align-top", width: "75", height: "75", alt: "Big Peach logo" %>
      <% end %>
      <%= link_to "The Big Peach", root_path, class: "navbar-brand" %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Find a Bus", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "All Your Locations", locations_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>

    <p id="notice"><%= notice %></p>

    <%= yield %>



    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=<%= Figaro.env.google_api_key %>">
    </script>
  </body>
</html>
